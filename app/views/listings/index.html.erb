<div class="row">
  <h1>Shop JG </h1>
  <p class="lead">JG uses the finest fabrics from around the world to give you one-of-a-kind gifts.</p>
</div>
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        <div class="caption">
          <h3><%= link_to listing.name, listing %></h3>
          <h4><%= number_to_currency(listing.price) %></h4>
          <p><%= "Sold by #{listing.user.name}" %></p>
          <% if (user_signed_in?) && (current_user == listing.user) %>
            <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
            <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>