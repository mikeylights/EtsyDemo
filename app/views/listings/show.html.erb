<div class="row">
	<div class="col-md-8">
		<div class="thumbnail">
			<%= image_tag @listing.image.url %>
		</div>
	</div>
	<div class="col-md-4">
		<h3><%= @listing.name %></h3>
		<p id="price"><%= number_to_currency(@listing.price) %></p>
		<p><%= @listing.description %></p>
		<br>
		<div class="center">
			<%= link_to "BUY IT NOW", new_listing_order_path(@listing), class: "btn btn-lg btn-success" %>
		</div>
	</div>
</div>

<% if current_user == @listing.user %>
	<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> 
<% end %>
<%= link_to 'Back', listings_path, class: "btn btn-link" %>

